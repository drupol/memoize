{
    "name": "drupol/memoize",
    "description": "Memoize functions with a trait or by extending an object.",
    "keywords": [
        "memoize",
        "memoization",
        "memoizer",
        "cache"
    ],
    "homepage": "https://github.com/drupol/memoize",
    "license": "MIT",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "email": "pol.dellaiera@protonmail.com",
            "homepage": "https://not-a-number.io",
            "role": "Author"
        }
    ],
    "require": {
        "php": ">= 7.1",
        "drupol/valuewrapper": "^1",
        "psr/simple-cache": "^1.0"
    },
    "require-dev": {
        "drupol/php-conventions": "^1",
        "drupol/phpspec-code-coverage": "^4 || ^5",
        "infection/infection": "^0.13.4",
        "phpspec/phpspec": "^4 || ^5",
        "symfony/cache": "^3 || ^4"
    },
    "suggest": {
        "symfony/cache": "drupol/memoize requires this package to get it working."
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "drupol\\memoize\\": "src/"
        }
    },
    "scripts": {
        "apigen": "./vendor/bin/apigen generate src --destination build/docs",
        "bench": "./vendor/bin/phpbench run --report=project --store --precision=3",
        "grumphp": "./vendor/bin/grumphp run",
        "infection": "./vendor/bin/infection run -j 10",
        "phpcbf": "./vendor/bin/phpcbf --ignore=vendor .",
        "phpcs": "./vendor/bin/phpcs --ignore=vendor .",
        "phpspec": "./vendor/bin/phpspec run",
        "scrutinizer": "./vendor/bin/ocular code-coverage:upload --format=php-clover build/logs/clover.xml"
    },
    "support": {
        "forum": "https://github.com/drupol/memoize/issues",
        "irc": "irc://irc.freenode.org/php",
        "source": "https://github.com/drupol/memoize"
    }
}
